<html lang="en">
    <body>
    <datalist id="statusList">
        <option>Planned</option>
        <option>Active</option>
        <option>Dropped</option>
        <option>Finished</option>
    </datalist>

    <h2>Добавление/Редактирование ранобе</h2>
    <div>
        <a href="../../title"><--</a>
    </div>
    <form method="post" action="./add">
        <label>
            Название тома: <input name="titleVolume" size="50" {{#ranobeVolume.title}} value="{{ranobeVolume.title}}" {{/ranobeVolume.title}}>
            Номер тома: <input name="number" type="number" size="10" {{#ranobeVolume.number}} value="{{ranobeVolume.number}}" {{/ranobeVolume.number}}> <br>
            Название серии: <input name="titleRanobe" size="50" {{#ranobe}} value="{{ranobe.title}}" {{/ranobe}}><br>
            Оригинальное название: <input name="originalTitle" size="50" {{#ranobe}} value="{{ranobe.originalTitle}}" {{/ranobe}}><br>
            Статус: <input name="status" list="statusList" size="10" {{#ranobeVolume.status}} value="{{ranobeVolume.status}}" {{/ranobeVolume.status}} ><br>
            Оценка: <input name="score" type="number" min="1" max="5"  {{#ranobeVolume.score}} value="{{ranobeVolume.score}}" {{/ranobeVolume.score}} ><br>
            Томов: <input name="volumes" type="number" min="0" max="999" {{#ranobe.volumes}} value="{{ranobe.volumes}}" {{/ranobe.volumes}}><br>
            Дата выхода: <input name="releaseDate" type="date" {{#ranobe.releaseDate}} value="{{ranobe.releaseDate}}" {{/ranobe.releaseDate}}>
            <input name="shikiId" {{#ranobe}} value="{{ranobe.shikiId}}" {{/ranobe}} hidden> <br>
            <input name="releaseYear" {{#ranobe}} value="{{ranobe.releaseYear}}" {{/ranobe}} hidden>
            <input name="ranobeId" {{#ranobe.id}} value="{{ranobe.id}}" {{/ranobe.id}} hidden>
            <input name="usrId" {{#ranobeVolume.usrId}} value="{{ranobeVolume.usrId}}" {{/ranobeVolume.usrId}} hidden>
            <input name="ranobeUsrId" {{#ranobe.usrId}} value="{{ranobe.usrId}}" {{/ranobe.usrId}} hidden>
            <input name="ranobeVolumeId" {{#ranobeVolume}} value="{{ranobeVolume.id}}" {{/ranobeVolume}} hidden>
        </label>
        <label>
            Дата окончания просмотра: <input name="endDate" type="date" {{#ranobeVolume.endDate}} value="{{ranobeVolume.endDate}}" {{/ranobeVolume.endDate}}> <br>
        </label><br>
        <input value="Сохранить" type="submit">
        <br>
        {{#add}}
            <p>
                <img alt="haruhi" {{#image}}src="{{image}}"{{/image}} width="200" height="300">
            </p>
        {{/add}}
    </form>
    {{#edit}}
        <form method="post" action="./delete">
            <label>
                <input name="id" {{#ranobeVolume}} value="{{ranobeVolume.id}}" {{/ranobeVolume}} hidden>
                <input value="Удалить" type="submit">
            </label>
        </form>
    {{/edit}}
    </body>
</html>